<Scene xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <AnchorPane prefHeight="799.0" prefWidth="871.0" style="-fx-background-color: Black;">
      <children>
         <ImageView fitHeight="801.0" fitWidth="870.0" pickOnBounds="true">
            <image>
               <Image url="@istockphoto-1010501332-612x612.jpg" />
            </image>
         </ImageView>
         <Label layoutX="138.0" layoutY="286.0" prefHeight="30.0" prefWidth="113.0" text="Username" textFill="#00adb5">
            <font>
               <Font name="Bauhaus 93" size="25.0" />
            </font></Label>
         <Label layoutX="147.0" layoutY="326.0" prefHeight="34.0" prefWidth="103.0" text="Password" textFill="#00adb5">
            <font>
               <Font name="Bauhaus 93" size="24.0" />
            </font></Label>
         <Label alignment="CENTER" contentDisplay="CENTER" layoutX="276.0" layoutY="192.0" prefHeight="42.0" prefWidth="297.0" text="Login to play" textAlignment="CENTER" textFill="#00adb5">
            <font>
               <Font name="Bauhaus 93" size="36.0" />
            </font>
         </Label>
         <CheckBox fx:id="Checkbox_show_login" layoutX="628.0" layoutY="331.0" mnemonicParsing="false" onAction="#Checkbox_show_login_action" prefHeight="18.0" prefWidth="82.0" text="Show" textFill="#eeeeee">
