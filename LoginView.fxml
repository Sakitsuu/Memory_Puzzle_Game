               <Font name="Bauhaus 93" size="18.0" />
            </font></CheckBox>
         <Button fx:id="Button_login" layoutX="261.0" layoutY="422.0" mnemonicParsing="false" onAction="#Button_login_action" prefWidth="350.0" text="Login">
