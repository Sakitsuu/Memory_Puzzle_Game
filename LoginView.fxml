               <Font name="Bauhaus 93" size="18.0" />
            </font></Button>
         <Button fx:id="Button_register_login" layoutX="325.0" layoutY="591.0" mnemonicParsing="false" onAction="#Button_register_login_action" prefHeight="30.0" prefWidth="221.0" text="Register">
            <font>
               <Font name="Bauhaus 93" size="18.0" />
            </font></Button>
         <TextField fx:id="Textfield_username_login" layoutX="266.0" layoutY="287.0" prefHeight="26.0" prefWidth="350.0" promptText="Enter your name" style="-fx-background-color: white;">
